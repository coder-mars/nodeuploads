<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

  <title>Node File Uploads</title>
</head>

<body>
  <main class="container">
    <h4 class="center-align">Upload Your Files ! </h4>

    <form action="/upload" method="post" enctype="multipart/form-data">
      <!-- Form-1 -->
      <div id="file-container">

        <div class="file-field input-field">

          <div class="btn">
            <span>File</span>
            <input type="file" name="photo">
          </div>
          <div class="file-path-wrapper">
            <input class="file-path validate" type="text">
          </div>

        </div>

      </div>
      <div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
          <i class="material-icons right">send</i>
        </button>
      </div>
    </form>

    <div class="row" style="margin-top: 10px;">
      <button id="add-more">
        <a class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></a>
      </button>
    </div>
    <small>
      <h5>
        <%= files.length !=0 ? 'File is uploaded successfully' : 'No File Uploaded' %>
      </h5>
    </small>
    <section class="row">
      <div class="col s2">
        <% if(files.length>0){ %>
          <% for(let i=0;i<files.length;i++){ %>
            <img src="./uploads/<%= files[i].filename %>" alt="" class="responsive-img">
            <% } %>
              <% } %>
      </div>
    </section>
  </main>


  <!-- <script src="../public/script.js"></script> -->
  <script>
    const addMoreBtn = document.getElementById('add-more')
    const FileContainer = document.getElementById('file-container')

    let counter = 1

    addMoreBtn.addEventListener('click', () => {
      ++counter;

      const fileTemplate = `<div class="btn">
            <span>File</span>
            <input type="file" name="photo">
          </div>
          <div class="file-path-wrapper">
            <input class="file-path validate" type="text">
          </div>
          `
      const div = document.createElement('div')
      div.setAttribute('class', 'file-field input-field')
      div.innerHTML = fileTemplate
      FileContainer.appendChild(div)
    })
  </script>
  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

</body>

</html>